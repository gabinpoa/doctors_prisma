// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User { 
  id String @id @default(uuid())
  email String @unique
  name String
  password String
  institution String
  profile String
  surgeries Surgery[]
}

model Surgery {
  id String @id @default(uuid())
  institution String
  members User[]
  start_date DateTime @default(now())
  label String?
  room String
  patient_name String
  patient_health_plan String
}